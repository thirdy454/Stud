<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#F3F9FF"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="5dp"
        android:backgroundTint="#F3F9FF"
        android:layout_marginTop="5dp"

        >

        <RelativeLayout
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#F3F9FF"
            android:elevation="3dp"
            android:paddingHorizontal="8dp"
            android:paddingVertical="10dp">

            <TextView
                android:id="@+id/nameAct"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:fontFamily="@font/poppinsregular"
                android:text="Sqlite Task"
                android:textColor="@color/black"
                android:textSize="15dp" />


            <TextView
                android:id="@+id/categoryAct"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/poppinsregular"
                android:text="Activity"
                android:textAlignment="textStart"
                android:textColor="@color/black"
                android:textSize="15dp" />


            <ImageView
                android:id="@+id/done"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_baseline_check_24"></ImageView>

            <TextView
                android:id="@+id/Deadline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:layout_toLeftOf="@+id/done"
                android:fontFamily="@font/poppinsregular"
                android:text="Sep 8, 10:30AM"
                android:textAlignment="textEnd"
                android:textColor="@color/black"
                android:textSize="15dp" />
        </RelativeLayout>

    </androidx.cardview.widget.CardView>


</RelativeLayout>