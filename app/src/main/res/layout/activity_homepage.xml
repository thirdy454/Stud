<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Homepage">

    <RelativeLayout
        android:id="@+id/homepageRelativelayout1"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:background="@drawable/radius">

        <ImageView
            android:id="@+id/studImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="30dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/stud" />

        <TextView
            android:id="@+id/studText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/studImage"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/poppinsbold"
            android:text="an app that help students to be productive by providing time management tools and resources."
            android:textAlignment="center"
            android:layout_marginHorizontal="30dp"
            android:textColor="#f4f4f4"
            android:textSize="20dp" />

        <ImageView
            android:id="@+id/fireteraImage"
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:layout_below="@+id/studText"
            android:layout_centerHorizontal="true"
            android:src="@drawable/firetera" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/homepageRelativelayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/homepageRelativelayout1">

        <Button
            android:id="@+id/getStartedBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="120dp"
            android:paddingHorizontal="80dp"
            android:paddingVertical="20dp"
            android:text="GET STARTED"
            android:textSize="19dp"
            app:cornerRadius="100dp" />
    </RelativeLayout>


</RelativeLayout>